<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/recipeListFragment">

    <fragment
        android:id="@+id/recipeListFragment"
        android:name="agc.playground.cookingrecipe.presentation.recipe.list.RecipeListFragment"
        android:label="@string/recipe_list_fragment_title"
        tools:layout="@layout/fragment_recipe_list" >
        <action
            android:id="@+id/navigateToRecipeDetailFragment"
            app:destination="@id/recipeDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/recipeDetailFragment"
        android:name="agc.playground.cookingrecipe.presentation.recipe.detail.RecipeDetailFragment"
        android:label="@string/recipe_detail_list_fragment_title"
        tools:layout="@layout/fragment_recipe_detail" >
        <argument
            android:name="currentRecipe"
            app:argType="agc.playground.cookingrecipe.data.models.RecipeUiModel" />
    </fragment>
</navigation>